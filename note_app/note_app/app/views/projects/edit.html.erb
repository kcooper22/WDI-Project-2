<h3>Edit Project</h3>


<form action="/projects/<%=@project.id%>/" method="post">
	<input type="hidden" name="_method" value="put">
	<label>Name: </label>
	<input type="text" name="project[name]" value="<%=@project.name%>"></br>
	<label>Description: </label>
	<input type="text" name="project[description]" value="<%=@project.description%>"></br>


	<input type="submit" value="Submit">

</form><br>

<p><%= link_to "Delete Project", project_path(@project), :method=>:delete %></p>

<p><%= link_to "Back", projects_path%></p>

